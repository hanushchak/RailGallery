@model RailGallery.Models.Comment

@{
    ViewData["Title"] = "Remove Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4 offset-md-4">
        <h4>Are you sure you want to remove this comment?</h4>
        <hr />


        <div class="row justify-content-between">
            <div class="col-auto font-weight-bold">
                @Html.DisplayNameFor(model => model.CommentText)
            </div>
            <div class="col-auto">
                @Html.DisplayFor(model => model.CommentText)
            </div>
        </div>

        <div class="row justify-content-between">
            <div class="col-auto font-weight-bold">
                @Html.DisplayNameFor(model => model.CommentDate)
            </div>
            <div class="col-auto">
                @Html.DisplayFor(model => model.CommentDate)
            </div>
        </div>

        <div class="row justify-content-between">
            <div class="col-auto font-weight-bold">
                Comment Author
            </div>
            <div class="col-auto">
                @Html.DisplayFor(model => model.ApplicationUser.UserName)
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="row justify-content-between">
                <div class="col-auto">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CommentID" />
                        <input type="submit" value="Remove" class="btn btn-danger" />
                    </form>
                </div>
                <div class="col-auto">
                    <a asp-controller="View" asp-action="View" asp-route-id="@Model.Image.ImageID">Back to Photo</a>
                </div>
            </div>
        </div>
    </div>
</div>
